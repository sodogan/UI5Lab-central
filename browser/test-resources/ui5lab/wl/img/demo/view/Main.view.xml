<mvc:View controllerName="be.wl.ImageDemo.controller.Main" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true" xmlns="sap.m" xmlns:u="sap.ui.unified" >
	<App id="idAppControl">
		<pages>
			<Page title="{i18n>title}">
				<content>
					<u:FileUploader id="upload" name="upload" tooltip="Upload your image" change="onFileChange" maximumFileSize="10" sameFilenameAllowed="true"></u:FileUploader>
					<Button text="Open Image in dialog" press="onOpenImageViewer"/>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>